<div class="page">
    <div class="page_content">

        <header class="header">
            {{> header }}
        </header>


        <main class="hero">
            {{#with hero}}
            <strong class="hero_title">{{title}}</strong>
            <p class="hero_text">{{description}}</p>
            <div class="hero_button">
                {{#with button}}
                <a href="{{url}}" class="hero_button_text">{{text}}</a>
                {{/with}}
            </div>
            {{/with}}
        </main>

        <div class="about">
            {{#with about}}
            <h3 class="about_title">{{heading}}</h3>
            <p class="about_info">{{info}}</p>
            {{/with}}
        </div>


        <div class="articles">

            <div class="articles_header">
                <h2 class="articles_title_text">Our Articles</h2>
                <button class="articles_title_button">View All</button>
            </div>

            <div class="articles_block">
                {{#each articles}}
                <div class="articles_block_card">

                    <img class="articles_card_image" id="{{id}}" src="{{photo}}" alt="Article image">

                    <div class="articles_card_title">{{name}}</div>

                    <p class="articles_card_text">{{description}}</p>

                    <button class="articles_card_button">Read All</button>
                </div>
                {{/each}}
            </div>

        </div>


        <footer class="footer">
            {{> footer }}
        </footer>
    </div>
</div>