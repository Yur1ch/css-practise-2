<header class="header">
    <div>
        {{> logo }}
    </div>


    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>


{{#with main}}
<main class="main">

    <img src="{{image}}" alt="Main image" class="main_image">


    <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{descriotion}}</p>
        <a href="{{href}}" class="main_button">{{button}}</a>
    </div>



</main>
{{/with}}

<div class="blog">
    {{#each featured}}
    <div class="featured">
        <img src="{{photo}}" alt="Featured image" class="featured_image">
        <h2 class="featured_title">{{heading}}</h2>
        <p class="featured_text">{{info}}</p>
        <a href="{{linkUrl}}" class="featured_link">{{linkText}}</a>
    </div>
    {{/each}}
</div>


<div class="form">
    {{#each actions}}
    <div class="actions_content">
        <h3 class="actions_title">{{heading}}</h3>
        <a href="{{url}}" class="actions_button">{{text}}</a>
    </div>
    {{/each}}
</div>

<footer class="page_block">
    {{> divider }}
    <div class="row footer">
        <div class="col-3">
            {{> logo}}
            <span class="footer_copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
        <div class="col-3">
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
        {{/each}}
    </div>
</footer>